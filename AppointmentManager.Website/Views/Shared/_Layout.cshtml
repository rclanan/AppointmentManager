<!DOCTYPE html>
<html lang="en" data-ng-app="@ViewBag.InitModule">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @Styles.Render("~/Content/bootstrap/base")
        @Styles.Render("~/Content/fontawesome")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <a href="/" class="navbar-brand"><i class="icon-calendar"></i> Staff Appointments</a>
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar-main">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="https://github.com/rclanan/AppointmentManager" target="_blank"><i class="icon-github"></i> Source</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="body" class="main">
            @RenderSection("featured", required: false)
            <div class="container">
                <div class="row">
                    @RenderBody()    
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <address>
                            <strong>Ray Clanan</strong><br>
                            <a href="mailto:rclanan@utopianconcept.com">rclanan@utopianconcept.com</a>
                        </address>
                    </div>
                    <div class="col-lg-6">
                        <address>
                            2644 Branigin Creek Blvd<br>
                                                    Franklin, IN 46131<br>
                                                                      <abbr title="Phone">P:</abbr> (317) 586-2186
                        </address>
                    </div>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap") 
        <script src="~/Scripts/angular.min.js"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
